<Window x:Class="HelloServiceClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloServiceClient"
        mc:Ignorable="d"
        Title="Consume WCF Service" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center">
        <TextBox x:Name="UserName"/>
        <Button Name="CallWCFService"
                Content="Call WCF Service"
                Click="CallWCFService_Click"/>
        <TextBlock Name="ServiceReturnMessage"/>
    </StackPanel>
</Window>
